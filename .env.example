# Configurações do banco de dados
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Exemplo para Neon Database
# DATABASE_URL="postgresql://user:pass@host.neon.tech/dbname?sslmode=require&connection_limit=1"

# Parameters for constructing your own connection string
# PGHOST=your-host.neon.tech
# PGUSER=your_username
# PGPASSWORD=your_password
# PGDATABASE=your_database

# Parameters for Vercel Postgres Templates
# POSTGRES_URL=postgres://user:pass@host/db?sslmode=require
# POSTGRES_URL_NON_POOLING=postgres://user:pass@host/db?sslmode=require
# POSTGRES_USER=your_username
# POSTGRES_HOST=your-host
# POSTGRES_PASSWORD=your_password
# POSTGRES_DATABASE=your_database
# POSTGRES_URL_NO_SSL=postgres://user:pass@host/db
# POSTGRES_PRISMA_URL=postgres://user:pass@host/db?connect_timeout=15&sslmode=require

# Prisma
PRISMA_GENERATE_DATAPROXY="false"
PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK="true"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Authentication
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your_jwt_secret_here"

# Stack Auth environment variables for Next.js (if using Stack Auth)
# NEXT_PUBLIC_STACK_PROJECT_ID=your_project_id
# NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_key
# STACK_SECRET_SERVER_KEY=your_secret_server_key
